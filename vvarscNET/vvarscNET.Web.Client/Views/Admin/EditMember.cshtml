@model  vvarscNET.Web.Client.Models.MemberEditModel

@{
    ViewBag.Title = "Edit Member";
}

<h2>Update Member</h2>

<article>
    <p>
        Enter Member Details
    </p>

    @using (Html.BeginForm("EditMember", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Member</legend>

            <div class="formFieldGroup">
                <div class="label">
                    @Html.LabelFor(model => model.ID)
                </div>
                <div class="label">
                    @Html.DisplayFor(model => model.ID)
                    @Html.HiddenFor(model => model.ID)
                </div>
            </div>

            <div class="formFieldGroup">
                <div class="label">
                    @Html.LabelFor(model => model.UserName)
                </div>
                <div class="label">
                    @Html.DisplayFor(model => model.UserName)
                    @Html.HiddenFor(model => model.UserName)
                </div>
            </div>

            <div class="formFieldGroup">
                <div class="label">
                    @Html.LabelFor(model => model.RSIHandle)
                </div>
                <div class="label">
                    @Html.EditorFor(model => model.RSIHandle)
                    @Html.ValidationMessageFor(model => model.RSIHandle)
                </div>
            </div>

            <div class="formFieldGroup">
                <div class="label">
                    @Html.LabelFor(model => model.OrganizationID)
                </div>
                <div class="label">
                    @Html.DisplayFor(model => model.OrganizationID)
                    @Html.HiddenFor(model => model.OrganizationID)
                </div>
            </div>

            <div class="formFieldGroup">
                <div class="label">
                    @Html.LabelFor(model => model.IsActive)
                </div>
                <div class="label">
                    @Html.DisplayFor(model => model.IsActive)
                    @Html.HiddenFor(model => model.IsActive)
                </div>
            </div>

            <div class="formFieldGroup">
                <div class="label">
                    @Html.LabelFor(model => model.RankID)
                </div>
                <div class="label">
                    @Html.DropDownListFor(model => model.RankID, Model.Ranks)
                    @Html.ValidationMessageFor(model => Model.RankID)
                </div>
            </div>

            <div class="formFieldGroup">
                <div class="label">
                    @Html.LabelFor(model => model.UserType)
                </div>
                <div class="label">
                    @Html.DropDownListFor(model => model.UserType, Model.UserTypes)
                    @Html.ValidationMessageFor(model => Model.UserType)
                </div>
            </div>

            <br />
            <div class="adminDialogButtonPane">
                <input type="submit" value="Update" class="adminDialogButton dialogButtonSubmit" />  @Html.ActionLink("Cancel", "OrganizationMembers", "Admin", new { id = Model.OrganizationID }, new { @class = "adminDialogButton dialogButtonCancel" })
            </div>
        </fieldset>
    }
</article>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
