@using System.Web.Http.Description
@using DalSoft.WebApi.HelpPage
@model IGrouping<string, ApiDescription>

    <div class="indexTable_apiGroup">
        <div class="indexTable_apiGroup_header">
            <img class="img_arrow01" src="/Help/DalSoft.WebApi.HelpPage.Views/DisplayTemplates/Images/arrow01.png" />
            <div class="indexTable_apiGroup_header_label" id="@Model.Key">
                @Model.Key
            </div>
        </div>
        <div class="indexTable_apiGroup_content">
            <table class="help-page-table">
                <thead>
                    <tr><th>Method Name</th><th>Verb</th><th>URI</th><th>Description</th></tr>
                </thead>
                <tbody>
                    @foreach (var api in Model)
                    {
                        <tr class="tr_highlightable clickableRow" data-url="@ViewBag.HelpRoute/api?apiId=@api.GetFriendlyId()">
                            <td class="api-name">@api.ActionDescriptor.ActionName</td>
                            <td class="api-verb">@api.HttpMethod.Method</td>
                            <td class="api-uri"><a href="@ViewBag.HelpRoute/api?apiId=@api.GetFriendlyId()">@api.RelativePath</a></td>
                            <td class="api-documentation">
                                @if (api.Documentation != null)
                                {
                                    <p>@api.Documentation</p>
                                }
                                else
                                {
                                    <p>No documentation available.</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
